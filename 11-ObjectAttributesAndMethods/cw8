class Arrays():

    @staticmethod
    def print_in_col(array):
        for c in array:
            print(c)

    def print_row(array):
        a=0
        for c in array:
            if a==0:
                print(c,end='')
            if a>0:
                print(',',c,end='')
            a+=1
            
            
            
my_array = [4,1,8,7,2]
Arrays.print_in_col(my_array)
Arrays.print_row(my_array)